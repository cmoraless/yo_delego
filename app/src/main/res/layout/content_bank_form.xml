<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/email_login_form"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/bank_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:padding="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:spinnerMode="dialog"
        android:enabled="false"
        android:clickable="false"
        android:textColor="@color/colorBlackText"
        android:textColorHighlight="@color/colorBlackText"
        android:textColorHint="@color/white" />

    <Spinner
        android:id="@+id/account_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:padding="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:spinnerMode="dialog"
        android:enabled="false"
        android:clickable="false"
        android:layout_below="@id/bank_spinner"
        android:textColor="@color/colorBlackText"
        android:textColorHighlight="@color/colorBlackText"
        android:textColorHint="@color/white" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/account_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_spinner"
        android:textColorHint="@color/colorBlackText"
        android:paddingStart="5dp"
        android:paddingEnd="7dp"
        android:layout_marginTop="35dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackText"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/colorBlackText"
            android:textColorLink="@color/white"
            android:hint="@string/account_number"
            android:inputType="numberSigned"
            android:digits="0123456789-"
            android:enabled="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>