<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/email_login_form"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:spinnerMode="dialog"
        android:textColor="@color/colorBlackText"
        android:textColorHighlight="@color/colorBlackText"
        android:textColorHint="@color/colorPrimary" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/last_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:textColorHint="@color/colorBlackText"
        android:layout_marginTop="15dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/career"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackText"
            android:textColorHint="@color/colorPrimary"
            android:textColorHighlight="@color/colorBlackText"
            android:textColorLink="@color/colorPrimary"
            android:hint="@string/career"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/year_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_name_layout"
        android:textColorHint="@color/colorBlackText"
        android:layout_marginTop="15dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/enrollment_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackText"
            android:textColorHint="@color/colorPrimary"
            android:textColorHighlight="@color/colorBlackText"
            android:textColorLink="@color/colorPrimary"
            android:hint="@string/enrollment_year"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>