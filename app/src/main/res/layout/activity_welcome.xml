<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplashBackground"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/welcome"
            android:id="@+id/imageView"/>

        <kiwigroup.yodelego.customui.DynamicTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_gravity="center"
            android:text="Bienvenidos a YoDelego"
            android:textStyle="bold"
            android:textColor="@color/colorWelcomeText"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:maxLines="6"
            android:textAlignment="center"
            android:lineSpacingExtra="6dp"
            android:text="YoDelego te da la bienvenida a la aplicación donde podrás encontrar trabajos esporáidcos de manera muy fácil y sencilla. Tu también podrás crear ofertas en caso de requerirlas... entra y disfruta de nuestra App."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/understood"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_white_background"
            android:layout_gravity="center"
            android:text="entendido"
            android:textAllCaps="true"
            android:elevation="4dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlackText"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>